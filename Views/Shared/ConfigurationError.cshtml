@model SmartFeedbackCollector.Models.ViewModels.ConfigurationErrorViewModel
@{
    ViewData["Title"] = "Błąd Konfiguracji";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Błąd Konfiguracji
                    </h3>
                </div>
                <div class="card-body p-5">
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">
                            <i class="bi bi-shield-x me-2"></i>
                            Nie można załadować konfiguracji aplikacji
                        </h4>
                        <hr>
                        <p class="mb-0">
                            @Model.ErrorMessage
                        </p>
                    </div>

                    <div class="mt-4">
                        <h5 class="text-muted mb-3">Co możesz zrobić:</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="bi bi-check-circle text-primary me-2"></i>
                                Sprawdź czy Twoje dane uwierzytelniające są poprawne
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle text-primary me-2"></i>
                                Upewnij się, że plik appsettings.json zawiera wszystkie wymagane klucze
                            </li>
                            @if (Model.TriedKeyVault)
                            {
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-primary me-2"></i>
                                    Sprawdź połączenie z Azure Key Vault
                                </li>
                            }
                            <li class="mb-2">
                                <i class="bi bi-check-circle text-primary me-2"></i>
                                Skontaktuj się z administratorem systemu
                            </li>
                        </ul>
                    </div>

                    @if (Model.IsDevelopment && Model.MissingConfigurations.Count > 0)
                    {
                        <div class="mt-4">
                            <h5 class="text-muted mb-3">Szczegóły techniczne:</h5>
                            <div class="alert alert-warning">
                                <strong>Brakujące konfiguracje:</strong>
                                <ul class="mt-2 mb-0">
                                    @foreach (var config in Model.MissingConfigurations)
                                    {
                                        <li><code>@config</code></li>
                                    }
                                </ul>
                            </div>
                            @if (Model.TriedKeyVault)
                            {
                                <p class="small text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Próbowano pobrać z: Azure Key Vault → appsettings.json
                                </p>
                            }
                            else
                            {
                                <p class="small text-muted">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Próbowano pobrać z: appsettings.json
                                </p>
                            }
                        </div>
                    }

                    <div class="mt-4 text-center">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-door me-2"></i>
                            Powrót do strony głównej
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
